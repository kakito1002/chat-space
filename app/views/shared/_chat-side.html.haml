.chat-side
 .chat-side__header
  .chat-side__header--box
   %p.chat-side__header--box-user-name
   = current_user.name
   %ul.chat-side__header--box-menu
    %li.chat-side__header--box-menu-new-group
     = link_to new_group_path do
      =fa_icon 'pencil-square-o'
    %li.chat-side__header--box-menu-edit-user
     = link_to edit_user_path(current_user) do
      =fa_icon 'cog'
 .groups
  - current_user.groups.each do |group|
   .group
    = link_to group_messages_path(group) do
     .group__name
      = group.name
     .group__message
      = group.show_last_message      
